<?xml version="1.0"?>

<PropertyList>

<sim include="Systems/views.xml">
	<description>BlueYellow</description>
	<author>Joshua Davidson (it0uchpods)</author>
	<status>This Plane is a Joke</status>
	<aircraft-version>V1.0.0</aircraft-version>
	<flight-model>yasim</flight-model>
	<aero>BlueYellow</aero>
	<fuel-fraction>0.5</fuel-fraction>

	<startup>
		<splash-texture>Aircraft/BlueYellow/splash.png</splash-texture>
	</startup>

	<model>
		<path>Aircraft/BlueYellow/Models/BlueYellow.xml</path>
	</model> 

	<systems>
		<autopilot>
			<path>Aircraft/BlueYellow/Systems/it-autoflight.xml</path>
		</autopilot>
		<autopilot>
			<path>Aircraft/BlueYellow/Systems/by-extra.xml</path>
		</autopilot>
		<property-rule n="101">
			<path>Aircraft/BlueYellow/Sounds/sound-control.xml</path>
		</property-rule>
	</systems> 

	<instrumentation>
		<path>Aircraft/BlueYellow/Systems/instrumentation.xml</path>
	</instrumentation>

	<sound>
		<path>Aircraft/BlueYellow/Sounds/sound.xml</path>
	</sound>

	<!-- Flap detents -->
	<flaps>
		<setting>0.000</setting>
		<setting>0.033</setting>
		<setting>0.167</setting>
		<setting>0.500</setting>
		<setting>0.667</setting>
		<setting>0.833</setting>
		<setting>1.000</setting>
	</flaps>
	
	<consumables>
		<fuel>
			<tank n="0">
				<name>LH Main</name>
			</tank>
			<tank n="1">
				<name>RH Main</name>
			</tank>
			<tank n="2">
				<name>Center</name>
			</tank>
			<tank n="3">
				<name>Fwd Aux</name>
			</tank>
			<tank n="4">
				<name>Aft Aux</name>
			</tank>
		</fuel>
	</consumables>

	<menubar>
		<default>
			<menu n="100">
				<label>BlueYellow</label>
				<item>
					<label>Pushback</label>
					<name>pushback</name>
					<binding>
						<command>dialog-show</command>
						<dialog-name>pushback</dialog-name>
					</binding>
				</item>
			</menu>
		</default>
	</menubar>

	<!--multiplay>
		<generic>
			<float n="0" alias="/surface-positions/left-aileron-pos-ani-norm"/>
			<int n="0" alias="/controls/lighting/beacon"/>
		</generic>
	</multiplay-->

</sim>

<it-autoflight>
	<config>
		<roll>
			<umin>-0.50</umin>
			<umax>0.50</umax>
			<kp>0.07</kp>
			<kp-vloc>0.08</kp-vloc>
			<ti>10.0</ti>
			<td>0.00001</td>
			<pfactor-offset>0.0</pfactor-offset>
		</roll>
		<pitch>
			<umin>-0.45</umin>
			<umax>0.45</umax>
			<kp>-0.09</kp>
			<ti>10.0</ti>
			<td>0.0001</td>
		</pitch>
		<cmd>
			<roll-kp>-1.9</roll-kp>
			<roll-scale>1.5</roll-scale>
			<vorloc>-5.0</vorloc>
			<vs>0.01</vs>
		</cmd>
	</config>
	<settings>
		<enable-stby>0</enable-stby> <!-- If disabled, LVL and V/S become active when AP on. -->
		<pitch-mode>2</pitch-mode> <!-- 0 = Elevator trim only, 1 = Elevator only, 2 = Elevator and Autotrim -->
		<auto-arm-alt>1</auto-arm-alt> <!-- Enable automatic altitude arm -->
		<bank-limit>25</bank-limit> <!-- Set the bank limit -->
	</settings>
</it-autoflight>

<controls>
	<gear>
		<brake-parking type="double">1.0</brake-parking>
	</gear>
</controls>

<systems include="Systems/init-systems.xml"/>

<instrumentation include="Systems/init-instrumentation.xml"/>


<input>
	<keyboard>
		<key n="127">
			<name>Delete</name>
			<desc>Toggle Reversers</desc>
			<binding>
				<command>property-toggle</command>
				<property>controls/engines/engine[0]/reverser</property>
			</binding>
			<binding>
				<command>property-toggle</command>
				<property>controls/engines/engine[1]/reverser</property>
			</binding>
		</key>
	</keyboard>
</input>

<nasal>
	<BlueYellow>
		<file>Aircraft/BlueYellow/Nasal/BlueYellow.nas</file>
	</BlueYellow>
	<itaf>
		<file>Aircraft/BlueYellow/Nasal/it-autoflight.nas</file>
	</itaf>
</nasal>

</PropertyList>


