<?xml version="1.0"?>

<PropertyList> 
	
	<path>BlueYellow.ac</path>
	
	<model>
		<name>Instruments</name>
		<path>Aircraft/BlueYellow/Models/Instruments.xml</path>
		<condition>
			<and>
				<equals>
					<property>/sim/aircraft</property>
					<value>BlueYellow</value>
				</equals>
				<equals>
					<property>/sim/current-view/internal</property>
					<value>1</value>
				</equals>
			</and>
		</condition>
		<offsets>
			<x-m>-1.2</x-m>
			<y-m>0.26</y-m>
			<z-m>0.15</z-m>
		</offsets>
	</model>
	
	<animation>
		<type>rotate</type>
		<object-name>hstab</object-name>
		<property>/surface-positions/elevator-pos-norm</property>
		<interpolation>
			<entry><ind>-1</ind><dep>-30</dep></entry>
			<entry><ind> 0</ind><dep>  0</dep></entry>
			<entry><ind> 1</ind><dep> 30</dep></entry>
		</interpolation>
		<center>
			<x-m>2.5294</x-m>
			<y-m>0</y-m>
			<z-m>-0.0659</z-m>
		</center>
		<axis>
			<x>0</x>
			<y>1</y>
			<z>0</z>
		</axis>
	</animation>
	
	<animation>
		<type>rotate</type>
		<object-name>vstab</object-name>
		<property>/surface-positions/rudder-pos-norm</property>
		<interpolation>
			<entry><ind>-1</ind><dep> 23</dep></entry>
			<entry><ind> 0</ind><dep>  0</dep></entry>
			<entry><ind> 1</ind><dep>-23</dep></entry>
		</interpolation>
		<axis>
			<x1-m>2.8891</x1-m>
			<y1-m>0</y1-m>
			<z1-m>0.7029</z1-m>
			<x2-m>2.6201</x2-m>
			<y2-m>0</y2-m>
			<z2-m>-0.0675</z2-m>
		</axis>
	</animation>
	
	<animation>
		<type>rotate</type>
		<object-name>aileronl</object-name>
		<property>/surface-positions/left-aileron-pos-norm</property>
		<interpolation>
			<entry><ind>-1</ind><dep> 45</dep></entry>
			<entry><ind> 0</ind><dep>  0</dep></entry>
			<entry><ind> 1</ind><dep>-45</dep></entry>
		</interpolation>
		<axis>
			<x1-m>0.2657</x1-m>
			<y1-m>-2.9280</y1-m>
			<z1-m>0.0964</z1-m>
			<x2-m>0.2657</x2-m>
			<y2-m>-3.6692</y2-m>
			<z2-m>0.1660</z2-m>
		</axis>
	</animation>
	
	<animation>
		<type>rotate</type>
		<object-name>aileronr</object-name>
		<property>/surface-positions/right-aileron-pos-norm</property>
		<interpolation>
			<entry><ind>-1</ind><dep> 45</dep></entry>
			<entry><ind> 0</ind><dep>  0</dep></entry>
			<entry><ind> 1</ind><dep>-45</dep></entry>
		</interpolation>
		<axis>
			<x1-m>0.2657</x1-m>
			<y1-m>3.7453</y1-m>
			<z1-m>0.1659</z1-m>
			<x2-m>0.2657</x2-m>
			<y2-m>2.9558</y2-m>
			<z2-m>0.0937</z2-m>
		</axis>
	</animation>
	
	<animation>
		<type>rotate</type>
		<object-name>flapl</object-name>
		<property>/surface-positions/flap-pos-norm</property>
		<interpolation>
			<entry><ind>0</ind><dep> 0</dep></entry>
			<entry><ind>1</ind><dep>60</dep></entry>
		</interpolation>
		<axis>
			<x1-m>0.3996</x1-m>
			<y1-m>-2.9280</y1-m>
			<z1-m>0.0863</z1-m>
			<x2-m>0.3996</x2-m>
			<y2-m>-0.1255</y2-m>
			<z2-m>-0.1798</z2-m>
		</axis>
	</animation>
	
	<animation>
		<type>rotate</type>
		<object-name>flapr</object-name>
		<property>/surface-positions/flap-pos-norm</property>
		<interpolation>
			<entry><ind>0</ind><dep>  0</dep></entry>
			<entry><ind>1</ind><dep>-60</dep></entry>
		</interpolation>
		<axis>
			<x1-m>0.3996</x1-m>
			<y1-m>2.9558</y1-m>
			<z1-m>0.0837</z1-m>
			<x2-m>0.3996</x2-m>
			<y2-m>0.1284</y2-m>
			<z2-m>-0.1773</z2-m>
		</axis>
	</animation>

</PropertyList>
