<?xml version="1.0"?>
<PropertyList>

<path>annunciators.ac</path>

<animation>
  <type>noshadow</type>
  <object-name>Annunciators</object-name>
  <object-name>AnnFuelLow</object-name>
  <object-name>AnnBattOff</object-name>
  <object-name>AnnEngValveL</object-name>
  <object-name>AnnEngValveR</object-name>
  <object-name>AnnStartValveL</object-name>
  <object-name>AnnStartValveR</object-name>
  <object-name>AnnFuelPressL</object-name>
  <object-name>AnnFuelPressR</object-name>
  <object-name>AnnSpoilGnd</object-name>
  <object-name>AnnParkBrake</object-name>
  <object-name>AnnSpoilExt</object-name>
</animation>
	<!-- Power on/off -->
	<animation>
		<name>Power on/off</name>
		<type>select</type>
		<object-name>Off</object-name>
		<condition>
			<less-than>
				<property>controls/switches/battery</property>
				<value>-1</value>
			</less-than>
		</condition>
	</animation> 
<animation>
  <type>material</type>
  <object-name>Annunciators</object-name>
  <emission>
    <red>0.4</red>
    <green>0.2</green>
    <blue>0.1</blue>
    <factor-prop>/controls/lighting/panel-norm</factor-prop>
  </emission>
</animation>

<animation>
  <type>select</type>
  <object-name>AnnFuelLow</object-name>
  <condition>
    <or>
      <less-than-equals>
        <property>/consumables/fuel/tank[0]/level-lbs</property>
        <value>2500</value>
      </less-than-equals>
      <less-than-equals>
        <property>/consumables/fuel/tank[1]/level-lbs</property>
        <value>2500</value>
      </less-than-equals>
    </or>
  </condition>
</animation>

<animation>
  <type>select</type>
  <object-name>AnnBattOff</object-name>
  <condition>
    <not><property>/controls/switches/battery</property></not>
  </condition>
</animation>

<animation>
  <type>select</type>
  <object-name>AnnEngValveL</object-name>
  <condition>
    <property>/controls/pneumatic/engine[0]/bleed</property>
  </condition>
</animation>

<animation>
  <type>select</type>
  <object-name>AnnEngValveR</object-name>
  <condition>
    <property>/controls/pneumatic/engine[1]/bleed</property>
  </condition>
</animation>

<animation>
  <type>select</type>
  <object-name>AnnStartValveL</object-name>
  <condition>
    <property>/controls/switches/eng-start[0]/position</property>
  </condition>
</animation>

<animation>
  <type>select</type>
  <object-name>AnnStartValveR</object-name>
  <condition>
    <property>/controls/switches/eng-start[1]/position</property>
  </condition>
</animation>

<animation>
  <type>select</type>
  <object-name>AnnFuelPressL</object-name>
  <condition>
    <not><property>/systems/fuel/tank[0]/fuel-press</property></not>
  </condition>
</animation>

<animation>
  <type>select</type>
  <object-name>AnnFuelPressR</object-name>
  <condition>
    <not><property>/systems/fuel/tank[1]/fuel-press</property></not>
  </condition>
</animation>

<animation>
  <type>select</type>
  <object-name>AnnSpoilGnd</object-name>
  <condition>
    <equals>
      <property>/controls/flight/spoilers-master</property>
      <value>1</value>
    </equals>
  </condition>
</animation>

<animation>
  <type>select</type>
  <object-name>AnnSpoilExt</object-name>
  <condition>
    <property>/controls/flight/spoilers-master</property>
  </condition>
</animation>

<animation>
  <type>select</type>
  <object-name>AnnParkBrake</object-name>
  <condition>
    <property>/controls/gear/brake-parking</property>
  </condition>
</animation>

</PropertyList>


